{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Product index</h1>
            <div>
                <a href="{{ path('app_product_new') }}" class="btn btn-primary">Create new</a>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Type</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>weight</th>
                    <th>Price</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.type }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.description }}</td>
                    <td>{{ product.weight }}</td>
                    <td>{{ product.price }} â‚¬</td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a href="{{ path('app_product_show', {'id': product.id}) }}" class="btn btn-sm btn-outline-info">
                                <i class="fa fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_product_edit', {'id': product.id}) }}" class="btn btn-sm btn-outline-warning">
                                <i class="fa fa-edit"></i> Edit
                            </a>
                            <a href="{{ path('app_product_export', {'id': product.id}) }}" class="btn btn-sm btn-outline-secondary">
                                <i class="fa fa-download"></i> Export CSV
                            </a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}